
<%if @documents.length==0%>
  <h1><br><br>Você não possui nenhum documento!</h1>
<%else%>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Descrição</th>
        <th>Baixar Arquivos</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.title %></td>
          <td><%= document.description %></td>
          <td>
            <a href="<%= document.file %>" class="btn btn-info btn-lg">
              <span class="glyphicon glyphicon-cloud-download"></span> Download Arquivo
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br><br>
