<%- model_class = Document -%>
<div class="page-header">
  <h1 class="text-white">Documentos - <%= link_to 'Enviar Documento',
              new_document_path,
              :class => 'btn btn-primary' %></h1>


</div>
<%if @documents.length==0%>
  <h1>Sem Documentos!</h1>
<%else%>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:file) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= link_to document.id, document_path(document) %></td>
          <td><%= document.title %></td>
          <td><%= document.description %></td>
          <td><a class="btn btn-secondary" href="<%= document.file %>" role="button" download><%= document.file %></a></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        document_path(document), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_document_path(document), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        document_path(document),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br><br>
