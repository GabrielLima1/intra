
<%= simple_form_for @document, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :file %>
  <%= f.input :description %>
  <%= f.association :user, prompt: "Selecione o Cliente", collection: User.all%>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                documents_path, :class => 'btn btn-default' %>
<% end %>
